# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/news_deduplication
REDIS_URL=redis://localhost:6379

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/news-alerts
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=http://localhost:5678

# News Sources Configuration
RSS_FEEDS_CONFIG_FILE=config/rss-feeds.json
NEWS_SOURCES_ENABLED=true

# Deduplication Settings
SIMILARITY_THRESHOLD=0.85
TIME_WINDOW_HOURS=24
CONTENT_FINGERPRINT_ALGO=sha256
SEMANTIC_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Performance
MAX_CONCURRENT_FEEDS=10
BATCH_SIZE=50
VECTOR_DIMENSION=384

# Alert Configuration
ALERT_COOLDOWN_MINUTES=5
MAX_ALERTS_PER_HOUR=20
ENABLE_EMAIL_ALERTS=false
ENABLE_SLACK_ALERTS=false
ENABLE_WEBHOOK_ALERTS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL_MS=30000